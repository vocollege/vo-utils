{
  "compilerOptions": {
     "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom", "esnext"],
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "strict": false,
    "strictNullChecks": false,                
    "strictFunctionTypes": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
